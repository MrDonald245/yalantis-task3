<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ListView style -->
    <style name="list_view">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <!-- Styles for recycler view item -->
    <style name="recycler_item_root">
        <item name="android:background">@drawable/recycler_item_background</item>
    </style>


    <!-- Google style text bold (small) -->
    <style name="small_text_bold">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Likes value -->
    <style name="recycler_likes_value" parent="small_text_bold">
        <item name="android:textColor">#37000000</item>
    </style>

    <!-- Vertical Separator -->
    <style name="recycler_item_vertical_separator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#1A000000</item>
    </style>

    <!-- Header issue -->
    <style name="recycler_item_header">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#D9000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Address & Date & Days -->
    <style name="small_text_bold_gray" parent="small_text_bold">
        <item name="android:textColor">#8C000000</item>
    </style>

</resources>